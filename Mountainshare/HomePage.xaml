<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutdoorShareMauiApp.Pages.HomePage"
             Title="MountainShare">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            
            <Frame CornerRadius="10" BorderColor="black" Padding="2" BackgroundColor="White" Margin="20,10,20,10">
                <Grid ColumnDefinitions="*,Auto">

                    <Entry Placeholder="Search" 
                           PlaceholderColor="Black"
                           TextColor="Black"
                       FontSize="15"            
                       BackgroundColor="Transparent"
                       Grid.Column="0" />        


                    <Image Source="search.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Grid.Column="1"/>
                </Grid>
            </Frame>

            <HorizontalStackLayout Spacing="15" Margin="15,0,0,0">
                <ImageButton Source="ski_icon.png" HeightRequest="40" WidthRequest="40" />
                <ImageButton Source="bike_icon.png" HeightRequest="40" WidthRequest="40" />
                <ImageButton Source="hiking_icon.png" HeightRequest="40" WidthRequest="40" />
                <ImageButton Source="climbing_icon.png" HeightRequest="40" WidthRequest="40" />
                <ImageButton></ImageButton>
            </HorizontalStackLayout>

            <Label Text="Équipement Disponible" FontAttributes="Bold" FontSize="18"  TextColor="Black"/>

            <VerticalStackLayout Padding="10">

                <Grid ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10"  Margin="0,0,0,15">

                    <Frame Grid.Column="0" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="ski_set.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="Set Ski Rossignol - Chamonix22"
                                TextColor="Black"   
                                FontSize="14" 
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                Margin="5"/>
                            <Label Text="25€/jour" 
                               TextColor="Green" 
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>


                    <Frame Grid.Column="1" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="bike.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="VTT Trek X-Caliber 9" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               Margin="5"
                               TextColor="Black"/> 
                            <Label Text="30€/jour" 
                               TextColor="Green" 
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>


                <Grid ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10">

                    <Frame Grid.Column="0" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="bike.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="VTT Trek X-Caliber 9" 
                               TextColor="Black"
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               Margin="5"/>
                            <Label Text="30€/jour" 
                               TextColor="Green" 
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame  Grid.Column="1" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="ski_set.png" WidthRequest="140" HeightRequest="140" />
                            <Label Text="Set Ski Rossignol - Chamonix22"
                               TextColor="Black"
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               Margin="5"/>
                            <Label Text="25€/jour" 
                               TextColor="Green" 
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

            </VerticalStackLayout>


            <!--/////////////////////////-->

            <Label Text="Guide et Moniteur Locaux" FontAttributes="Bold" FontSize="18"  TextColor="Black"/>

            <VerticalStackLayout Padding="10" >
                
                
                
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,0,0,15">

                    <Frame Grid.Column="0" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="guide1.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="Marc D. - Guide de Haute Montagne"
                               TextColor="Black"    
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               Margin="5"/>
                            <Button Text="Contacter" 
                                BackgroundColor="DarkBlue" 
                                TextColor="White" 
                                CornerRadius="20"/>                     
                        </VerticalStackLayout>
                    </Frame>

                    

                    <Frame Grid.Column="1" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="guide2.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="Deni M. - Moniteur de Ski"
                                TextColor="Black"
                                FontSize="14" 
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                Margin="5"/>
                            <Button Text="Contacter" 
                                BackgroundColor="DarkBlue" 
                                TextColor="White" 
                                CornerRadius="20"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">

                    <Frame Grid.Column="0" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="guide3.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="Marc D. - Guide de Haute Montagne"
                               TextColor="Black"
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               Margin="5"/>
                            <Button Text="Contacter" 
                                BackgroundColor="DarkBlue" 
                                TextColor="White" 
                                CornerRadius="20"/>
                        </VerticalStackLayout>
                    </Frame>


                    <Frame Grid.Column="1" CornerRadius="10" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>
                            <Image Source="guide1.png" WidthRequest="140" HeightRequest="140"/>
                            <Label Text="Deni M. - Moniteur de Ski"
                                TextColor="Black"
                                FontSize="14" 
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                Margin="5"/>
                            <Button Text="Contacter" 
                                BackgroundColor="DarkBlue" 
                                TextColor="White" 
                                CornerRadius="20"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

            </VerticalStackLayout>



            <Label Text="Transport" FontAttributes="Bold" FontSize="18" />
            <Frame>
                <VerticalStackLayout>
                    <Label Text="Navette Station - Aujourd’hui" />
                    <Label Text="Chamonix → Grand Montets - 09:00" />
                    <Label Text="Chamonix → Brévent - 09:30" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
