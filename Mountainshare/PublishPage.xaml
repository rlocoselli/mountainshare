<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutdoorShareMauiApp.Pages.PublishPage"
             Title="Stations de Ski">

    <StackLayout Padding="15" Spacing="10">

        <Label Text="DÃ©couvrez les Stations" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <IndicatorView x:Name="indicator" IndicatorColor="Gray" SelectedIndicatorColor="Black"/>

        <CarouselView ItemsSource="{Binding Images}" IndicatorView="indicator" Loop="True" HeightRequest="300">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Aspect="AspectFill" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        
    </StackLayout>
</ContentPage>
